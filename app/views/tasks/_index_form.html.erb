<div class="bg-white ">
  <div class="max-w-3xl text-center">
    <%= form_with(model: task, class: "contents") do |form| %>

      <div class="flex flex-col mt-8 space-y-3 sm:space-y-0 sm:flex-row sm:justify-left sm:-mx-2" >
        <%= form.text_field :description, placeholder: "Add new task", class: "px-4 py-2 text-gray-700 bg-white border rounded-md sm:mx-2 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40"%>

          <%= form.submit class: "px-4 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-purple-700 rounded-md sm:mx-2 hover:bg-purple-600 focus:outline-none focus:bg-purple-600" %>
      </div>
    <% end %>
  </div>
</div>



